<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ListObjectsClick"
        android:layout_width="255dp"
        android:layout_height="62dp"
        android:layout_marginEnd="-65dp"
        android:backgroundTint="#3F51B5"
        android:onClick="listObjectsClick"
        android:text="Lista de objetos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CerrarSesionClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/imageList"
        android:layout_width="77dp"
        android:layout_height="62dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/ListObjectsClick"
        app:layout_constraintTop_toTopOf="@+id/ListObjectsClick"
        app:srcCompat="@drawable/lista" />

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="77dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageList"
        app:layout_constraintTop_toBottomOf="@+id/imageList"
        app:srcCompat="@drawable/usuario" />

    <Button
        android:id="@+id/PerfilClick"
        android:layout_width="255dp"
        android:layout_height="62dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3F51B5"
        android:onClick="perfilClick"
        android:text="Perfil"
        app:layout_constraintEnd_toEndOf="@+id/ListObjectsClick"
        app:layout_constraintStart_toEndOf="@+id/imagePerfil"
        app:layout_constraintTop_toBottomOf="@+id/ListObjectsClick" />

    <Button
        android:id="@+id/jugarClick"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#001068"
        android:onClick="jugarClick"
        android:text="Jugar"
        app:layout_constraintEnd_toEndOf="@+id/ListObjectsClick"
        app:layout_constraintStart_toStartOf="@+id/imageList"
        app:layout_constraintTop_toBottomOf="@+id/PerfilClick" />

    <Button
        android:id="@+id/CerrarSesionClick"
        android:layout_width="225dp"
        android:layout_height="62dp"
        android:backgroundTint="#B4B6C3"
        android:onClick="cerrarSesionClick"
        android:text="Cerrar SesiÃ³n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PerfilClick"
        app:layout_constraintVertical_bias="0.63" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:visibility="gone"
        android:indeterminate="false"
        android:max="100"
        android:progress="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>